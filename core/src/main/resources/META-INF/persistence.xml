<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0"
             xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
    <persistence-unit name="MyEclipseLinkExample">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <jta-data-source>jdbc/default</jta-data-source>
        <class>ch.zotteljedi.onlineshop.data.entity.CustomerEntity</class>
        <class>ch.zotteljedi.onlineshop.data.entity.ProductEntity</class>
        <class>ch.zotteljedi.onlineshop.data.entity.PurchaseEntitiy</class>
        <properties>
            <property name="tomee.jpa.factory.lazy" value="true" />
            <property name="hibernate.hbm2ddl.auto" value="update"/>
        </properties>
    </persistence-unit>
</persistence>

